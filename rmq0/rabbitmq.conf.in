cluster_partition_handling = pause_minority

loopback_users = none

log.console = true
log.console.level = debug
log.file.level = info
log.exchange = false
log.exchange.level = info

cluster_formation.peer_discovery_backend = classic_config
cluster_formation.classic_config.nodes.0 = rmq0
cluster_formation.classic_config.nodes.1 = rmq1
cluster_formation.classic_config.nodes.2 = rmq2

listeners.tcp.default = 5672
listeners.ssl.default = 5771

management.tcp.port = 15672
management.ssl.port = 15771

management.ssl.certfile   = @@CURDIR@@/certs/server_rmq0_certificate.pem
management.ssl.keyfile    = @@CURDIR@@/certs/server_rmq0_key.pem
management.ssl.cacertfile = @@CURDIR@@/certs/ca_certificate.pem

ssl_options.certfile   = @@CURDIR@@/certs/server_rmq0_certificate.pem
ssl_options.keyfile    = @@CURDIR@@/certs/server_rmq0_key.pem
ssl_options.cacertfile = @@CURDIR@@/certs/ca_certificate.pem
